{
    "name": "penpay/backend",
    "description": "PenPay Backend — Non-custodial financial bridge (M-Pesa ↔ Deriv)",
    "type": "project",
    "license": "proprietary",
    "authors": [
        {
            "name": "JunieroCO",
            "email": "security@penpay.co"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,

    "require": {
        "php": "^8.2",
        "ext-json": "*",
        "ext-mbstring": "*",
        "ext-pdo": "*",
        "doctrine/dbal": "^3.8",
        "firebase/php-jwt": "^6.11",
        "guzzlehttp/guzzle": "^7.8",
        "monolog/monolog": "^3.5",
        "php-di/php-di": "^7.1",
        "predis/predis": "^2.2",
        "psr/simple-cache": "^3.0",
        "ramsey/uuid": "^4.7.4"
    },

    "require-dev": {
        "friendsofphp/php-cs-fixer": "^3.50",
        "mockery/mockery": "^1.6",
        "nyholm/psr7": "^1.8",
        "nyholm/psr7-server": "^1.1",
        "phpstan/phpstan": "^1.11",
        "phpunit/phpunit": "^10.5"
    },

    "autoload": {
        "psr-4": {
            "PenPay\\": "src/"
        }
    },

    "autoload-dev": {
        "psr-4": {
            "PenPay\\Tests\\": "tests/"
        }
    },

    "scripts": {
        "test": "phpunit",
        "test:coverage": "phpunit --coverage-html build/reports/coverage",
        "analyse": "phpstan analyse",
        "fix": "php-cs-fixer fix",
        "ci": [
            "composer validate --strict",
            "phpstan analyse",
            "phpunit --no-coverage"
        ]
    },

    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}
